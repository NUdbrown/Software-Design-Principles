
public class Plain extends Toppings {

	public Plain(IPizza pizza) {
		super(pizza);
		// TODO Auto-generated constructor stub
	}

	
	@Override
	public String getDescription() {
		// TODO Auto-generated method stub
		return "Pizza" + super.getDescription();
	}

	@Override
	public double cost() {
		// TODO Auto-generated method stub
		return super.cost();
	}
	
}
