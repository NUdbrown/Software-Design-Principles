
public abstract class Toppings implements IPizza{
	private IPizza pizza;
	
	public Toppings(IPizza pizza){
		this.pizza = pizza;
	}
	
	@Override
	public String getDescription() {
		// TODO Auto-generated method stub
		return pizza.getDescription();
	}

	@Override
	public double cost() {
		// TODO Auto-generated method stub
		return pizza.cost();
	}

}
