package main;

public class MockKeyboard {
	private Desktop desktop;
	public MockKeyboard(Desktop desktop){
		this.desktop = desktop;
	}
	
	public void pollKeyboard(){
		//wait for input
		//hold whatever is pressed and send it to the window
		boolean running = true;
		while(running){
			while(dtop.hasKeysQueued()){
				char key = (char)dtop.getKeyCode();
				System.out.println("this is from pollkeyboard()" + key);			
				notifyObserver(key);
				dtop.repaint();				
				
			}
			try {
				Thread.sleep(10);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		
		}
			
	}

}
