package main;

import edu.neumont.csc415.DesktopColor;
import edu.neumont.csc415.DesktopGraphics;
import edu.neumont.csc415.Point;

public class Title implements IWindow {
	private IWindow win;
	private String title;
	
	public Title(IWindow win, String title){
		this.win = win;
		this.title = title;
	}
	
	@Override
	public void paint(DesktopGraphics arg0){
		Point topLeft = new Point(getWidth() + 100, 0);
		Point bottomRight = new Point(80, getHeight() - 100);
		arg0.fillRectangle(topLeft, bottomRight, DesktopColor.CYAN);
	}

	@Override
	public int getWidth() {
		return win.getWidth();
	}

	@Override
	public int getHeight() {
		return win.getHeight();
	}

}
